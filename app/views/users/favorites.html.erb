<div class="favoritespage">
  <div class='user_infomation'>
    <h3 class='user_title'>MyPage</h3>
    <%= image_tag @user.icon.url , class: "icon"%>
    <p class="profile_name">Name : <%= @user.name %></p>
    <div>
      <%= link_to t('views.users.edit'), edit_user_registration_path, class:"btn btn-outline-secondary btn-sm" %>
    </div>
  </div>

  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= link_to "MyPost", user_path(@user), class: "nav-link active" %>
    </li>
    <li class="nav-item">
      <%= link_to "FavoritePosts", favorites_user_path(@user), class: "nav-link active" %>
    </li>
  </ul>

  <div class="favorites_wrapper">
    <% @favorites.each do |list| %> 
      <div class='favorites_list'>
        <div>  
          <%= image_tag list.image.url %>
        </div>
        <%= list.user.name %>
        <div>
          <%= list.content %>
        </div>
        <div class='post_last'>
          <div>
            <span class="category">
              <%= list.category_i18n %>
            </span>
            <% if list.user.assign %>
              <span class="<%= list.user.assign.pair.season %>">
                <%= list.user.assign.pair.season_i18n %>
              </span>
            <% end %>
          </div>
          <%= l list.created_at, format: :short %>
        </div>
      </div>
    <% end %>
  </div>
</div>

