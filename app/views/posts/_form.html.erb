<h2>Postページ</h2>
<%= form_with(model: @post, local: true) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="post_content">
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>
  <div class="post_image">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="post_category">
    <%= f.label :category %>
    <%= f.select :category, Post.categories_i18n.invert %>
  </div>
  <div>
    <%= f.hidden_field :season, :value => current_user.pair.season if current_user.pair.season? %>
  </div>
  <%= f.submit %>
<% end %>
<%= link_to '投稿一覧画面に戻る', posts_path %>
