<div class='post_main'>
  <% if current_user.present? %>
    <%= link_to '新しく投稿する', new_post_path, class:"new btn btn-outline-secondary btn-md" %>
  <% end %>
  <div class='post_search'>
    <%= search_form_for @q  do |f| %>
      <%= f.search_field :content_cont , placeholder: "投稿内容"%>
      <%= f.select :category_eq, Post.categories_i18n.invert.map{|key, value| [key, Post.categories[value]]},{include_blank: true}  %>
      <%= f.select :user_assign_pair_season_eq, Pair.seasons_i18n.invert.map{|key, value| [key, Pair.seasons[value]]}, {include_blank:true} %>

      <%= f.submit '検索', class:"search btn btn-outline-secondary btn-md" %>
    <% end %>
  </div>

  <div class="wrapper">
    <% @posts.each do |post| %>
      <div id="post_<%= post.id %>", class='post_list'>
        <%= render 'post', post: post %>
      </div>
    <% end %>
  </div>
</div>





