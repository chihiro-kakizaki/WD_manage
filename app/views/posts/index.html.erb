<% if current_user.try(:admin?) %>
  <h1>Blogs_admin</h1>
<% else %> 
  <h2>ログイン後トップページ</h2>
<% end %>

<% @posts.each do |post| %>
<table>
  <tr>
    <td><%= post.user.name %></td>
    <td><%= post.content %></td>
    <% if user_signed_in? && current_user != post.user %>
      <% if current_user.favorite_find(post.id) %>
        <td><%= link_to 'お気に入りからはずす', destroy_favorite_path(post.id), method: :delete %></td>
      <% else %>
        <td><%= link_to 'お気に入り登録する', create_favorite_path(post.id), method: :post %></td>
      <% end %>
    <% end %>
  
     <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
     <td><%= link_to '編集する', edit_post_path(post.id) %></td>
     <td><%= link_to '削除する', post_path(post.id), method: :delete %></td>
  </tr>
<% end %>
</table>

  <% if current_user.present? %>
    <%= link_to "お気に入り一覧", favorites_post_path(current_user.id) %>
    <%= link_to '新しく投稿する', new_post_path %>
  <% end %>