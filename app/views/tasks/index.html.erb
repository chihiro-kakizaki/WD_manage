
<h1>タスク一覧</h1>
<table>
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>タスク名</th>
      <th>期日目安</th>
      <th>進行度</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>

      <tr>
        <td><%= task.user.name %></td>
        <td><%= task.title %></td>
        <td><%= task.expired_on %></td>
        <td><%= task.status_i18n %></td>

        <td><%= link_to '詳細', pair_task_path(@pair, task) %></td>
        <td><%= link_to '編集', edit_pair_task_path(@pair, task) %></td>
        <td><%= link_to '削除', pair_task_path(@pair, task), method: :delete %></td>
        </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '新規作成', new_pair_task_path(@pair, @task) %>


