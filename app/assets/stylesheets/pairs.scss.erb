/*pair form(new,edit)*/
.pair.row {
  background: url(<%= asset_path('form.png') %>) center no-repeat;
  background-size: cover;
  height: 880px;
  padding-top: 50px;
}

.pair_explain {
  margin: 30px auto;
  width: 150%;
}


.form-control.season {
  width: 100px;
}

.form-control.weddingday_on {
  width: 150px;
}

.form-control.email {
  width: 300px;
}

.pair-btn {
  margin: 20px 0;
}

/*editページ*/
.edit_pair {
  width: 70%;
  margin: 40px auto;
  text-align: center;
}

/*showページ*/
.tasks_list {
  width: 75%;
  margin: 0 auto;
}

.task_icon {
  border-radius: 100px;
}

.pair_infomation {
  width: 400px;
  height: 400px;
  margin: 30px auto;
  padding: 120px 0;
  text-align: center;
  border: solid #AFDFE4;
  color: gray;
  border-radius: 50%;
}

.first_user {
  display: inline-block;
}

.pair_count {
  margin: 20px 0;
  font-size: 20px;
}

.table{
  text-align: center;
}

.table>thead>tr>th {
  border: 1px solid #AFDFE4;
}

.table>tbody>tr>td {
  border: 1px solid #AFDFE4;
}
